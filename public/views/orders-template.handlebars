<h1 class="page-title text-xs-center">All orders</h1>
<div id="orders" class='container'>
        {{#if orders}}
            {{#orders}}
                <div class="order col-xs-12 mb-30">
                    <div class="order-titles">Movie titles: {{_titles}}</div>
                    <div class="order-price">Price: ${{_price}}</div>
                </div>   
            {{/orders}}
        {{else}}
        <div class="no-orders text-center">
            <h2>No orders in the store yet</h2>
            <img class="movie-cover" src="images/unhappy.png" alt="unhappy icon">
        </div>
        {{/if}}
</div>