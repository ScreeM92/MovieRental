<h1 class="page-title text-xs-center">Touch with us</h1>

<div class="wrapper-contact">
    <div class="row">
        <section id="contact">
            <div class="contact-section">
                <div class="container">
                    <form method="post" action="/#tickets">
                        <div class="row">
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12 form-line">
                                <div class="form-group">
                                    <label for="exampleInputUsername">Your name</label>
                                    <input name="username" type="text" class="form-control" id="" placeholder="Enter Name">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail">Email Address</label>
                                    <input name="email" type="email" class="form-control" id="exampleInputEmail" placeholder=" Enter Email">
                                </div>	
                                <div class="form-group">
                                    <label for="telephone">Mobile No.</label>
                                    <input type="tel" class="form-control" id="telephone" placeholder=" Enter 10-digit mobile number">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <label for ="description">Message</label>
                                    <textarea name="description" class="form-control" id="description" placeholder="Enter Your Message"></textarea>
                                </div>
                                <div>
                                    {{!--<button type="button" class="btn btn-default submit btn-read-more">
                                        <i class="fa fa-paper-plane" aria-hidden="true"></i>  Send Message</button>--}}
                                    <button type="submit" class="btn btn-red btn-lg btn-block login-button">
                                        <i class="fa fa-paper-plane" aria-hidden="true"></i>  Send Message
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
</div>
